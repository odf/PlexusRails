.dj-replace.dj-anchor
  - if comment and may_view(comment)
    .comment= format_text(comment.text)
    .clear
    - if may_edit(comment)
      %p.note
        %span.action-links
          %a.dj-link{ :href => edit_comment_url(comment) } Edit
          %a.dj-delete{ :href => comment_url(comment) } Delete
