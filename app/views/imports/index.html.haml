- title "Imports for Sample <em>#{h @sample.name}</em>".html_safe
- stylesheet :tables

%table.zebra
  %thead
    %tr
      %th User
      %th Sample
      %th Source date
      %th Import date
      %th
  %tbody
    - @imports.select(&method(:may_view)).each do |import|
      %tr
        %td= import.user.name
        %td= import.sample_name
        %td= format_time import.source_timestamp
        %td= '' || import.created_at
        %td= link_to('Details', import)

%p= link_to 'Back to sample', @sample
