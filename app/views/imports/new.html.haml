  %form{ :enctype => 'multipart/form-data', :method => :post, |
         :action => project_imports_url(@project) } |
    %p
      JSON Data:
      %br
      %input{ :name => 'data', :type => 'file', :size => 40 }
      %input{ :name => "result", :type => "submit", :value => "Import" }
      %input{ :name => "result", :type => "submit", :value => "Cancel" }
    %p
      Description:
      %br
      %textarea{ :name => 'description', :rows => 5, :cols => 80 }
