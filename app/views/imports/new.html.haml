- title 'New Import'
- stylesheet :forms

#import-link.dj-replace.dj-anchor

%fieldset#import.dj-replace.dj-form.dj-anchor
  = formular_for [@project, @import], :html => {:multipart => true} do |form|
    %p= form.file_field :data, :label => 'JSON Data'
    = form.text_area :description, :rows => 5, :cols => 80
    %p= form.result_buttons

