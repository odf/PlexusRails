- stylesheet :forms
- stylesheet :tables

= formular_for(@project) do |form|
  = form.text_field :name, :required => true if create
  = form.text_field :organization
 
  %p
    %label Members:
  %table
    %thead
      %tr
        %th Name
        %th No Access
        %th Read Only
        %th Read/Write
        %th Manager
    %tbody
      - form.fields_for :roles do |fields|
        - user = fields.object.user
        %tr
          %td= fields.hidden_field :user_id, :label => user.name
          %td= fields.radio_button :role, '', :label => ''
          %td= fields.radio_button :role, 'client', :label => ''
          %td= fields.radio_button :role, 'contributor', :label => ''
          %td= fields.radio_button :role, 'manager', :label => ''

  %p= form.result_buttons
  .clear
.clear
