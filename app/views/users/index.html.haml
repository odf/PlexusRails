- title 'Users'
- stylesheet :tables

%table.zebra
  %thead
    %tr
      %th User
      %th Name
      %th Email
      %th Organization
      %th Homepage
  
  %tbody
    - @users.select(&method(:may_view)).each do |user|
      %tr{ :class => cycle('even', 'odd') }
        %td= link_to(user.login_name, user)
        %td= user.name
        %td= user.email
        %td= user.organization
        %td= user.homepage

%br
= link_to('New user', new_user_path) if may_authorize
