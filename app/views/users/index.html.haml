- title 'Listing users'
- stylesheet :tables

%table
  %thead
    %tr
      %th Login name
      %th First name
      %th Last name
      %th Email
      %th Organization
      %th Homepage
      %th{ :colspan => 3 }
  
  %tbody
    - for user in @users
      %tr{ :class => cycle(:odd, :even) }
        %td= user.login_name
        %td= user.first_name
        %td= user.last_name
        %td= user.email
        %td= user.organization
        %td= user.homepage
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete

%br
= link_to 'New user', new_user_path
